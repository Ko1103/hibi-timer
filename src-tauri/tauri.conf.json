{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "hibi-timer",
  "version": "0.1.1",
  "identifier": "com.ko-yamaura.hibi-timer",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "hibi-timer",
        "width": 448,
        "height": 400,
        "maxWidth": 448,
        "maxHeight": 400
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "signingIdentity": "Developer ID Application: Ko Yamaura (9886BK756P)",
      "dmg": {
        "windowSize": {
          "width": 448,
          "height": 400
        }
      }
    },
    "windows": {
      "nsis": {
        "installerHooks": "./windows/hooks.nsh"
      }
    }
  }
}
